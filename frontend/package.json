{
  "name": "volunteer-platform-frontend",
  "version": "1.0.0",
  "description": "Volunteer Activity Management Platform Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test": "playwright test",
    "test:unit": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --no-coverage",
    "test:unit:watch": "NODE_OPTIONS='--max-old-space-size=4096' vitest",
    "test:unit:coverage": "NODE_OPTIONS='--max-old-space-size=4096' vitest run --coverage --reporter=verbose --pool=forks --poolOptions.forks.singleFork"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "antd": "^5.12.8",
    "@ant-design/icons": "^5.2.6",
    "axios": "^1.6.2",
    "react-query": "^3.39.3",
    "react-i18next": "^13.5.0",
    "i18next": "^23.7.6",
    "dayjs": "^1.11.10",
    "recharts": "^2.8.0",
    "react-hook-form": "^7.48.2",
    "zustand": "^4.4.7",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "@playwright/test": "^1.48.0",
    "vitest": "^1.0.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^23.0.1",
    "@rollup/rollup-linux-x64-gnu": "^4.52.5",
    "@rollup/rollup-linux-x64-musl": "^4.52.5"
  }
}
